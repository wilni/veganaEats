<%- layout('layout/boilerplate')  %>

<h1>All Recipes</h1> 



<div class="row">
<div class="col-9">
<% for(let recipe of recipes){ %>
    <div class="card mb-3 recipeCard">
        <div class="row">
        <div class="col-md-4">
            <img src="<%= recipe.image %> "
                class="card-img-top" alt="food picture">
        </div>
        <div class="col-md-6">
            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Neque nemo, sed alias exercitationem quibusdam in deleniti dignissimos! Cupiditate, facilis, asperiores aut iure non unde nostrum id, eaque rem natus est.</p>
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= recipe.title %> </h5>
            <p class="card-text text-muted"><%= recipe.origin %>, <%= recipe.dishType %> </p>
            <a href="recipes/<%= recipe._id %>" class="card-link btn font-weight-bold cardBtn">View recipe</a>
        </div>
    </div>
</div>
